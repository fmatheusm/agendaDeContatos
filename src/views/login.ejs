<%- include('includes/head.ejs') %> <%- include('includes/nav.ejs') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="display text-center">Criar conta ou entrar</h1>
      <p class="text-center lead">Faça login ou crie sua conta</p>

      <%- include('includes/messages.ejs'); %>

      <div class="row">
        <div class="col-lg my-5">
          <h4>Faça seu cadastro</h4>
          <p>Se você ainda não tem conta, preencha o formulário abaixo:</p>

          <form class="form-cadastro" action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="mb-3">
              <label class="form-label">Seu email</label>
              <input type="email" class="form-control" id="exampleInputEmail1" name="email" aria-describedby="emailHelp" />
            </div>
            <div class="mb-3">
              <label class="form-label">Seu sua senha</label>
              <input type="password" class="form-control" id="exampleInputEmail1" name="password" aria-describedby="emailHelp" />
            </div>

            <button type="submit" class="btn btn-primary">
              Criar sua conta
            </button>
          </form>
        </div>

        <div class="col-lg my-5">
          <h4>Faça seu login</h4>
          <p>Se você já tem uma conta, faça seu login abaixo:</p>
          <form class="form-login" action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="mb-3">
              <label class="form-label">Seu email</label>
              <input type="email" class="form-control" id="exampleInputEmail1" name="email" aria-describedby="emailHelp" />
            </div>
            <div class="mb-3">
              <label class="form-label">Seu sua senha</label>
              <input type="password" class="form-control" id="exampleInputEmail1" name="password" aria-describedby="emailHelp" />
            </div>

            <button type="submit" class="btn btn-primary">Entrar</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('includes/footer.ejs') %>